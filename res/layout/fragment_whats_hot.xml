<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e8f0f0">
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="应用信息"
        android:textSize="19sp"
        android:textColor="#000000"/>
    </LinearLayout>
    <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/prefresh_list_cutline" />
   <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input"
                    android:orientation="vertical" >
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:text="应用名称"
                            android:gravity="right"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="INFO"
                            android:textSize="19sp" >
                            <requestFocus />
                        </TextView>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/prefresh_list_cutline" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="版本号"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="1.0.1"
                            android:textSize="19sp" >
                            <requestFocus />
                        </TextView>
                    </LinearLayout>
                 <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/prefresh_list_cutline" />
                 <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:text="开发时间"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="2014.4 - 2014.6"
                            android:textSize="19sp" >
                            <requestFocus />
                        </TextView>>
                    </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/prefresh_list_cutline" />
                 <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:text="应用描述"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                    </LinearLayout>
                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="一款轻量级消息收发软件。实现信息点对点的传送，满足大学生对于资讯的需求。\n从此，妈妈再也不用担心我错过DEADLINE啦~\(≧▽≦)/~啦啦啦"
                            android:textSize="15sp" >
                            <requestFocus />
                        </TextView>>
                </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="开发者"
        android:textSize="19sp"
        android:textColor="#000000"/>
    </LinearLayout>
    <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/prefresh_list_cutline" />
    <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input"
                    android:orientation="vertical" >
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:gravity="right"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="江绍峰"
                            android:textSize="19sp" >
                            <requestFocus />
                        </TextView>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/prefresh_list_cutline" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="所在单位"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="中山大学软件学院 12级4班"
                            android:textSize="19sp" >
                            <requestFocus />
                        </TextView>
                    </LinearLayout>
                 <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/prefresh_list_cutline" />
                
                 <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" >
                        <TextView
                            android:layout_width="80sp"
                            android:layout_height="wrap_content"
                            android:text="联系方式"
                            android:textColor="#000000"
                            android:textSize="19sp" />
                    </LinearLayout>
                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:text="如果发现任何BUG，请及时发送邮件jiangshf3@mail2.sysu.edu.cn。O(∩_∩)O谢谢~"
                            android:textSize="15sp" >
                            <requestFocus />
                        </TextView>>
                </LinearLayout>
</LinearLayout>
